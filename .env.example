# Arquivo de configuração de ambiente
# Copie para .env e configure as variáveis

# Configuração Flask
FLASK_ENV=production
SECRET_KEY=your_very_secret_key_change_this_in_production

# Configuração do banco de dados
DATABASE_URL=sqlite:///libras_stats.db

# Configuração de upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Configuração de sessão
SESSION_TYPE=filesystem
SESSION_PERMANENT=False

# Configuração de log
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configuração de performance
ML_CONFIDENCE_THRESHOLD=0.6
FRAME_PROCESSING_FPS=10
MAX_WORKERS=2

# Configuração de hospedagem
HOST=0.0.0.0
PORT=5000
WORKERS=2
TIMEOUT=120

# Configuração de desenvolvimento (apenas para dev)
DEBUG=False
TESTING=False